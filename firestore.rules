rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // 공개 읽기, 관리자만 쓰기 (메탈 시세)
    match /metalPrices/{docId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }

    // 그 외 컬렉션은 기본 거부
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
